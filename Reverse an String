/* Q2 WAP which will Reverse an String
Example 
Input : Hello
        
output: olleH
*/
import java.util.*;
public class Main{
public static String reverse(String str){
    StringBuilder sb = new StringBuilder(str);
    str = sb.reverse().toString();
    return str;

// Another Approch
/*
Using Reverse for loop
String rev="";
        for(int i=str.length()-1; i>=0; i--){
            rev = rev + str.charAt(i);
        }
        System.out.println(rev);
*/
}
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter an String : ");
        String str = sc.nextLine();
       
    
        System.out.println("Reverse String : "+reverse(str));
    }
}

// 3rd Approch using StringBuilder with O(n) Time complexity 

// Reverse an String using String builder and the Time Complexity of this code is O(n)

import java.util.*;
class Main {
    public static void main(String[] args) {
        StringBuilder sb = new StringBuilder("Hello");
        for(int i=0; i<sb.length()/2; i++){
            int front = i;
            int back = sb.length()-1-i;
            
            char frontend = sb.charAt(front);
            char backend = sb.charAt(back);
            
            sb.setCharAt(front, backend);
            sb.setCharAt(back, frontend);
        }
        System.out.println(sb);
    }
}
